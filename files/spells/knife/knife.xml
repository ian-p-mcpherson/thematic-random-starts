<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      air_friction="0" 
      mass="0">
    </VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.8"
    lob_max="1.0"
    speed_min="700"
    speed_max="700"
    friction="0.0"
    direction_random_rad="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    ground_collision_fx="1"
    explosion_dont_damage_shooter="1" 
    on_collision_die="1"
    lifetime="3"
    damage="1.0"
    velocity_sets_scale="0"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0.01"
    hit_particle_force_multiplier="3.0"
    ragdoll_fx_on_collision="BLOOD_SPRAY"
    collide_with_tag="hittable"
    >

    <config_explosion
      never_cache="1" 
      camera_shake="0" 
      explosion_radius="5"
      explosion_sprite="mods/thematic_random_starts/files/spells/knife/knifespark.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="0" 
      hole_destroy_liquid="0" 
      hole_enabled="0" 
      damage="0.8"
      ray_energy="20000"
      particle_effect="0" 
      damage_mortals="1"
	    physics_explosion_power.min="0.0" 
      physics_explosion_power.max="0.0" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="3"
      sparks_count_min="1" 
      sparks_enabled="0"
      material_sparks_enabled="1"
      material_sparks_count_max="1"
      material_sparks_count_min="0" 
      gore_particle_count="3"
      light_fade_time="0.02"
      stains_enabled="1"
      stains_radius="2"
      is_digger="0"
      audio_enabled="0" >
    </config_explosion>

    <damage_by_type slice="1.6" >
    </damage_by_type>
  </ProjectileComponent>

  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/thematic_random_starts/files/spells/knife/dash.xml" 
    next_rect_animation=""
    rect_animation="" 
    additive="1"
    >
  </SpriteComponent>

  <AudioComponent
  file="data/audio/Desktop/animals.bank"
  event_root="animals/miner" >
  </AudioComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/thematic_random_starts/files/spells/knife/knife.xml"
		>
	</VariableStorageComponent>
</Entity>

